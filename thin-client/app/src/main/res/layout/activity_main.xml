<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ic_li"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_main" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSecondary"
        app:popupTheme="@style/LightTheme.PopupOverlay" />

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ic_back"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/ic_back"
                android:backgroundTint="?attr/colorPrimary"
                android:contentDescription="@string/icon_back_description" />

            <ImageButton
                android:id="@+id/ic_tutorial"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/ic_tutorial"
                android:backgroundTint="?attr/colorPrimary"
                android:contentDescription="@string/icon_tutorial" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/app_bar_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/painseau"></ImageView>

            <TextView
                android:id="@+id/app_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAINseau"
                android:textColor="?attr/colorPrimary"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ic_leaderboard"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/ic_leaderboard"
                android:backgroundTint="?attr/colorPrimary"
                android:contentDescription="@string/icon_leaderboard_description" />

            <ImageButton
                android:id="@+id/ic_profile"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/ic_profile"
                android:backgroundTint="?attr/colorPrimary"
                android:contentDescription="@string/icon_profile_description" />

            <ImageButton
                android:id="@+id/ic_settings"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/ic_settings"
                android:backgroundTint="?attr/colorPrimary"
                android:contentDescription="@string/icon_settings_description" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>