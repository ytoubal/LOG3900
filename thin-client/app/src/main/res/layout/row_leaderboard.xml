<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_row_leaderboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10sp"
    android:paddingBottom="10sp">

    <TextView
        android:id="@+id/rank_leaderboard"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20sp"
        android:text="0"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_leaderboard"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20sp"
            android:src="@drawable/placeholder_logo" />

        <ImageView
            android:id="@+id/border_leaderboard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/border1" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_leaderboard"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Dindon"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/username_leaderboard"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:text="TextView"
            android:textSize="24sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/xp_leaderboard"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/level_leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"

        android:text="TextView"
        android:textSize="24sp" />

</LinearLayout>