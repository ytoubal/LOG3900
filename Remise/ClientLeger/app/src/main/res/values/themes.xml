<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_darker_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_purple</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="LightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_white</item>
        <item name="colorPrimaryVariant">@color/dark_light_blue</item>
        <item name="colorOnPrimary">@color/dark_middle_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_dark_blue</item>
        <item name="colorOnSecondary">@color/pale_white</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/pale_white</item>
        <!--        <item name="colorSecondaryVariant">@color/teal_200</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>